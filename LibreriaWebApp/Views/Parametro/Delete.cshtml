@model Domain.Dtos.ParametroDto

@{
    ViewData["Title"] = "Eliminar Parametro";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<!-- Mostrar detalles del tema a eliminar -->
<div class="mt-3">
    <h3>Estás a punto de eliminar el siguiente parámetro:</h3>
    <p>ID: @Model.Clave</p>
    <p>Nombre: @Model.Valor</p>
</div>

<!-- Confirmación de la acción de eliminación -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Clave)

    <div class="row mt-5">
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
        <div class="col-2">
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
    </div>
</form>